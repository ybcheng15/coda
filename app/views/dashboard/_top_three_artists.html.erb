<!-- #2 Artist (Left) -->
<div class="flex flex-col items-center">
  <div class="w-30 h-30 rounded-full border-2 border-slate-400 shadow-lg shadow-gray1 overflow-hidden">
    <% if artists['items'][1]['images'].any? %>
      <%= image_tag artists['items'][1]['images'].first['url'], class: "w-full h-full object-cover" %>
